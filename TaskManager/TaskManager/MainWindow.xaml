<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskManager" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="418" d:DesignWidth="525" SizeToContent="WidthAndHeight" MinWidth="470" MinHeight="530">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StatusBar Height="23" HorizontalAlignment="Left" Name="statusBar1" VerticalAlignment="Bottom" Width="507" />
        <TabControl HorizontalAlignment="Stretch" Name="tabControl1" VerticalAlignment="Stretch">
            <TabItem Header="Processes" Name="ProcTabItem">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ListView Height="400" HorizontalAlignment="Left" Margin="10,10,0,0" Name="ProcListView" VerticalAlignment="Top" Width="480" HorizontalContentAlignment="Left"
                                GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="ID" DisplayMemberBinding="{Binding Path=Id}"/>
                                <GridViewColumn Width="Auto" Header="Threads" DisplayMemberBinding="{Binding Path=Threads.Count}"/>
                                <GridViewColumn Width="Auto" Header="Name" DisplayMemberBinding="{Binding Path=ProcessName}"/>
                                <GridViewColumn Width="Auto" Header="App" DisplayMemberBinding="{Binding Path=MainModule.ModuleName}"/>
                                <GridViewColumn Width="Auto" Header="MainWindow" DisplayMemberBinding="{Binding Path=MainWindowTitle}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Refresh" Height="23" HorizontalAlignment="Left" Margin="10,413,0,0" Name="ProcRefreshButton" VerticalAlignment="Top" Width="75" Click="ProcRefreshButton_Click" />
                    <Button Content="Create" Height="23" HorizontalAlignment="Left" Margin="100,413,0,0" Name="ProcCreateButton" VerticalAlignment="Top" Width="75" Click="ProcCreateButton_Click" />
                    <Button Content="Kill" Height="23" HorizontalAlignment="Left" Margin="190,413,0,0" Name="ProcKillButton" VerticalAlignment="Top" Width="75" Click="ProcKillButton_Click" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
